<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="363.0" prefWidth="816.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.unicas.project.template.address.view.DashboardController">

    <children>
        <BorderPane prefHeight="400.0" prefWidth="600.0"
                    AnchorPane.topAnchor="0.0"
                    AnchorPane.bottomAnchor="0.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0">

            <!-- BARRA SUPERIORE -->
            <top>
                <VBox spacing="0">

                    <!-- Header -->
                    <HBox spacing="10"
                          alignment="CENTER_LEFT"
                          style="-fx-padding: 10 16;">
                        <children>
                            <Label text="Eventi &amp; Biglietteria"
                                   style="-fx-text-fill: black;
                                          -fx-font-size: 18px;
                                          -fx-font-weight: bold;"/>
                        </children>
                    </HBox>

                    <!-- FILTRI -->
                    <HBox spacing="10.0"
                          alignment="CENTER_LEFT"
                          style="-fx-background-color: #ffffff;
             -fx-padding: 10 16;
             -fx-border-color: #e0e0e0;
             -fx-border-width: 0 0 1 0;">
                        <children>
                            <Label text="Luogo:"
                                   style="-fx-font-weight: bold;"/>

                            <ComboBox fx:id="placeFilterCombo"
                                      prefWidth="180.0"
                                      onAction="#onFilterChanged"/>

                            <Label text="Dal:"
                                   style="-fx-font-weight: bold;"/>

                            <DatePicker fx:id="startDateFilterPicker"
                                        onAction="#onFilterChanged"/>

                            <Label text="Al:"
                                   style="-fx-font-weight: bold;"/>

                            <DatePicker fx:id="endDateFilterPicker"
                                        onAction="#onFilterChanged"/>

                            <!-- spinge i pulsanti a destra -->
                            <Region HBox.hgrow="ALWAYS"/>



                            <Button fx:id="calendarButton"
                                    text="Calendario eventi"
                                    onAction="#onOpenCalendar"
                                    visible="false"
                                    managed="false"
                                    style="-fx-background-color: #43A047;
                       -fx-text-fill: white;
                       -fx-font-weight: bold;
                       -fx-background-radius: 18;
                       -fx-padding: 4 10;"/>

                            <Button text="Reset"
                                    onAction="#onResetFilters"
                                    style="-fx-background-color: transparent;
                       -fx-text-fill: #1E88E5;
                       -fx-font-weight: bold;"/>
                        </children>
                    </HBox>

                </VBox>
            </top>

            <!-- COLONNA EVENTI -->
            <!-- COLONNA SINISTRA -->
            <left>
                <BorderPane prefWidth="220.0"
                            style="-fx-background-color: #ffffff;
                       -fx-border-color: #e0e0e0;
                       -fx-border-width: 0 1 0 0;">

                    <!-- HEADER DINAMICO DELLA COLONNA SINISTRA (SOTTO I FILTRI) -->
                    <top>
                        <VBox spacing="8"
                              BorderPane.alignment="CENTER_LEFT"
                              style="-fx-padding: 12 16 4 16;">
                            <children>

                                <!-- HEADER DINAMICO -->
                                <Label fx:id="headerLabel"
                                       text="Benvenuto"
                                       style="-fx-font-size: 15px;
                                  -fx-font-weight: bold;
                                  -fx-text-fill: #333333;"/>

                                <!-- TITOLO LISTA EVENTI -->
                                <Label text="Eventi disponibili"
                                       style="-fx-font-size: 13px;
                                  -fx-font-weight: bold;
                                  -fx-text-fill: #424242;"/>

                            </children>
                        </VBox>
                    </top>

                    <center>
                        <ScrollPane fitToWidth="true"
                                    prefWidth="220.0"
                                    style="-fx-background-color: transparent;">
                            <content>
                                <VBox fx:id="eventsListBox"
                                      spacing="8.0"
                                      style="-fx-padding: 10 12 12 12;">
                                </VBox>
                            </content>
                        </ScrollPane>
                    </center>

                </BorderPane>
            </left>

            <!-- DETTAGLIO EVENTO -->
            <center>
                <fx:include source="EventDetail.fxml" fx:id="eventDetail"/>
            </center>

        </BorderPane>
    </children>
</AnchorPane>
