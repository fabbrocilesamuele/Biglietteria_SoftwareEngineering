<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unicas.project.template.address.view.EventDetailController">

    <!-- TOP: informazioni sull'evento -->
    <top>
        <VBox spacing="5.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Button fx:id="indietroButton"
                        text="Indietro"
                        visible="false"
                        managed="false"
                        onAction="#onIndietroButton"
                        style="-fx-background-color: #000;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-background-radius: 18;
                           -fx-padding: 6 14;" />

                <Label fx:id="eventTitleLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Titolo evento" />
                <Label fx:id="eventPlaceLabel" text="Luogo: -" />
                <Label fx:id="eventDateLabel" text="Data: -" />
            </children>
        </VBox>
    </top>

    <!-- CENTER: mappa posti -->
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true">
            <content>
                <GridPane fx:id="seatGrid" hgap="5.0" vgap="5.0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </GridPane>
            </content>
        </ScrollPane>
    </center>

    <!-- RIGHT: legenda -->
    <right>
        <VBox spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Label style="-fx-font-weight: bold;" text="Legenda" />

                <HBox spacing="5.0">
                    <Label style="-fx-background-color: #4CAF50; -fx-min-width: 20; -fx-min-height: 20;-fx-border-radius:20"  />
                    <Label text="Posto libero" />
                </HBox>

                <HBox spacing="5.0">
                    <Label style="-fx-background-color: #F44336; -fx-min-width: 20; -fx-min-height: 20;-fx-border-radius:20" />
                    <Label text="Posto occupato" />
                </HBox>

                <HBox spacing="5.0" fx:id="legendSelectedSeat">
                    <Label style="-fx-background-color: #FFC107; -fx-min-width: 20; -fx-min-height: 20;-fx-border-radius:20" />
                    <Label text="Posto selezionato" />
                </HBox>
            </children>
        </VBox>
    </right>

    <!-- BOTTOM: posto selezionato + conferma -->
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Label text="Posto selezionato:" />
                <Label fx:id="selectedSeatLabel" text="nessuno" />
                <Pane HBox.hgrow="ALWAYS" />

                <!-- Bottone MODIFICA EVENTO: nascosto di default -->
                <Button fx:id="editEventButton"
                        text="Modifica evento"
                        visible="false"
                        managed="false"
                        onAction="#onEditEvent"
                        style="-fx-background-color: #1E88E5;
                       -fx-text-fill: white;
                       -fx-font-weight: bold;
                       -fx-background-radius: 18;
                       -fx-padding: 6 14;" />

                <!-- NUOVO: bottone Visualizza ricevuta (solo cliente) -->
                <Button fx:id="viewReceiptButton"
                        text="Visualizza ricevuta"
                        visible="false"
                        managed="false"
                        onAction="#onViewReceipt"
                        style="-fx-background-color: #43A047;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-background-radius: 18;
                           -fx-padding: 6 14;" />

                <Button fx:id="confirmBookingButton"
                        onAction="#onConfirmBooking"
                        text="Conferma prenotazione"
                        style="-fx-text-fill: white;"/>

                <Button fx:id="waitlistButton"
                        onAction="#onWaitlistClicked"
                        visible="false"
                        managed="false"
                        style="-fx-text-fill: white;-fx-background-color: orange;"
                />

            </children>
        </HBox>
    </bottom>

</BorderPane>
